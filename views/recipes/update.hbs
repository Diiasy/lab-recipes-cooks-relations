<form action="/recipes/update" method="POST">
    <input type="text" value="{{recipe.title}}" placeholder="title" name="title"><br>
    <input type="text" value="{{recipe.image}}" placeholder="image url" name="image"><br>
    <label for="level">Level:</label>
    <select name="level" id="level">
        {{#if recipe.easy}}
            <option selected value="Easy Peasy">Easy Peasy</option>
        {{else}}
            <option value="Easy Peasy">Easy Peasy</option>
        {{/if}}
        {{#if recipe.medium}}
            <option selected value="Amateur Chef">Amateur Chef</option>
        {{else}}
            <option value="Amateur Chef">Amateur Chef</option>
        {{/if}}
        {{#if recipe.hard}}
            <option selected value="UltraPro Chef">UltraPro Chef</option>
        {{else}}
            <option value="UltraPro Chef">UltraPro Chef</option>
        {{/if}}
    </select><br>
    <input type="text" value="{{recipe.cuisine}}" placeholder="cuisine" name="cuisine"><br>
    <label for="">Creator:</label>
    <select class="form-control" name="cooks" type="text" multiple="{{cooks.length}}">
        {{#each cooks}}
            <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
    </select><br>
    <input type="number" value="{{recipe.duration}}" placeholder="duration" name="duration" min="0"><br>
    <label for="dishType">Dish Type:</label>
    <select name="dishType" value="{{recipe.dishType}}" id="dishType">
        {{#if recipe.breakfast}}
            <option selected value="breakfast">Breakfast</option>
        {{else}}
            <option value="breakfast">Breakfast</option>
        {{/if}}
        {{#if recipe.main_course}}
            <option selected value="main_course">Main Course</option>
        {{else}}
            <option value="main_course">Main Course</option>
        {{/if}}
        {{#if recipe.soup}}
            <option selected value="soup">Soup</option>
        {{else}}
            <option value="soup">Soup</option>
        {{/if}}
        {{#if recipe.snack}}
            <option selected value="snack">Snack</option>
        {{else}}
            <option value="snack">Snack</option>
        {{/if}}
        {{#if recipe.drink}}
            <option selected value="drink">Drink</option>
        {{else}}
            <option value="drink">Drink</option>
        {{/if}}
        {{#if recipe.dessert}}
            <option selected value="dessert">Dessert</option>
        {{else}}
            <option value="dessert">Dessert</option>
        {{/if}}
        {{#if recipe.other}}
            <option selected value="other">Other</option>
        {{else}}
            <option value="other">Other</option>
        {{/if}}
    </select><br>
    {{#each recipe.ingredients}}
        <input type="text" value="{{this}}" placeholder="ingredient" name="ingredients">
    {{/each}}<br>
    <input type="text" hidden value="{{recipe.id}}" name="id">
    <button>Update Recipe</button>
</form>